// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgres"
    url      = env("DATABASE_URL")
}

model ChatStorage {
    id       Int    @id @default(autoincrement())
    question String
    answer   String
}

model ChatHistory {
    id        String   @id @default(cuid())
    roomId    String
    question  String
    answer    String
    createdAt DateTime @default(now())

    @@index([roomId])
    @@index([createdAt])
}

model Question {
  id          Int      @id @default(autoincrement())
  question    String
  answer      String
}
